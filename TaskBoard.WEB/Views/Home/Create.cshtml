@model TaskBoard.WEB.ViewModels.WorkTaskViewModel

@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<h1>@Localizer["CreateTitle"]</h1>


<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="panel-heading">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div hidden class="form-group">
                                <label asp-for="TaskState" class="control-label"></label>
                                <input asp-for="TaskState" class="form-control" />
                                <span asp-validation-for="TaskState" class="text-danger"></span>
                            </div>
                            <div hidden class="form-group">
                                <label asp-for="AuthorUserId" class="control-label"></label>
                                <input asp-for="AuthorUserId" value=@User.Identity.Name class="form-control" />
                                <span asp-validation-for="AuthorUserId" class="text-danger"></span>
                            </div>
                            <div hidden class="form-group">
                                <label asp-for="CreatedDate" class="control-label"></label>
                                <input asp-for="CreatedDate" class="form-control" />
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>
                            <div hidden class="form-group">
                                <label asp-for="UpdatedDate" class="control-label"></label>
                                <input asp-for="UpdatedDate" class="form-control" />
                                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
                            </div>
                        </div>
</form>
            </div>
        </div>
    </div>

<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

